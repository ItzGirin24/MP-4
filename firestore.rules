rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read/write all collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Specific rules for different collections (optional, more secure)
    match /questions/{questionId} {
      allow read: if true; // Allow anyone to read questions for survey
      allow write: if request.auth != null; // Only authenticated users can modify
    }

    match /responses/{responseId} {
      allow read: if request.auth != null; // Only authenticated users can read responses
      allow write: if request.auth != null && request.auth.token.email in [
        'admin@smaitabubakar.sch.id',
        'research@smaitabubakar.sch.id',
        'kelas11c@smaitabubakar.sch.id',
        'admin@mp.id'
      ]; // Only admin emails can write responses
    }

    match /settings/{settingId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email in [
        'admin@smaitabubakar.sch.id',
        'research@smaitabubakar.sch.id',
        'kelas11c@smaitabubakar.sch.id',
        'admin@mp.id'
      ]; // Only admin emails can modify settings
    }
  }
}
